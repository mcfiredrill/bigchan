<table class="bigups">
<tr>
  <td class="bigup">
    <% if bigup.pic.file? %>
      <div class="pic">
        <% link_to(bigup.pic.url) do %>
          <%= image_tag bigup.pic.url(:large) %>
        <% end %>
      </div>
    <% end %>
    <div class="title"><%= h bigup.title %></div>
    <div class="name"><%= h bigup.name %></div>
    <% unless bigup.content.empty? %>
      <div class="comment"><%= display wrap bigup.content %></div>
    <% end %>
    <div class="timestamp"><%= time_ago_in_words(bigup.created_at) %> ago.</div>
  </td>
</tr>
</table>
