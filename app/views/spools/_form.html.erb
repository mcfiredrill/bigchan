<div id="spool_form">
	<%= form_for @new_spool, :html => {:multipart => true} do |f| %>
		<%= f.fields_for :bigups do |b| %>
			<%= b.error_messages %>
			<div class="field">
				<%= b.text_field :title %>
			</div>
			<div class="field">
				<%= b.text_field :name %>
			</div>
			<div class="field">
				<%= b.text_area :content %>
			</div>
			<div class="field">
				<%= b.file_field :pic %>
			</div>
		<% end %>
		<div class="mover"><%= image_tag('tool_s.png', :class => 'tool', :title => 'Move') %></div>
		<div class="field">
			<%= f.submit "post" %>
		</div>
	<% end %>
</div>
